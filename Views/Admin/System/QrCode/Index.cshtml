@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CO大赛二维码下载</title>
    <style>
        html, body, div {
            margin: 0;
            padding: 0;
        }

        a {
            text-decoration: none;
        }

        body {
            padding: 50px 0;
            background-color: rgb(51, 51, 51);
            font-family: "微软雅黑";
        }

        .title {
            text-align: center;
            ;
            color: #fff;
            font-size: 20px;
        }

        .box {
            max-width: 280px;
            width: 80%;
            margin: 0 auto;
        }

        .wrp_code {
            width: 100%;
            text-align: center;
            margin: 20px 0;
        }

            .wrp_code img {
                max-width: 282px;
                width: 100%;
            }

        .info {
            text-align: center;
            color: #fff;
            font-size: 16px;
            background-color: #232323;
            box-shadow: inset 0 5px 10px -5px #191919,0 1px 0 0 #444;
            -webkit-box-shadow: inset 0 5px 10px -5px #191919,0 1px 0 0 #444;
            border-radius: 30px;
            line-height: 54px;
        }
    </style>
</head>
<body>
    <form>
        <div class="title">请扫描大赛二维码</div>
        <div class="box">
            <div class="wrp_code">
                <img src="@Html.Raw(ViewBag.url)" alt="">
            </div>
            <a href="@Html.Raw(ViewBag.url)" download="qrcode.jpg">
                <div class="info">点击下载
                </div>
            </a>
        </div>
    </form>
</body>
</html>
